{
  "name": "@archwayhq/arch3.js",
  "version": "0.1.0",
  "description": "The all-in-one library for your awesome Archway dApp",
  "homepage": "https://docs.archway.io",
  "repository": "github:archway-network/arch3.js",
  "keywords": [
    "archway",
    "cosmos",
    "cosmjs",
    "cosmosjs",
    "cosmwasm",
    "tendermint",
    "atom",
    "wasm",
    "smart-contracts",
    "blockchain",
    "dapp",
    "dapps",
    "nft",
    "tooling",
    "web3"
  ],
  "author": "Archway Network (https://archway.io)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/archway-network/arch3.js/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "build/",
    "./*.md",
    "./LICENSE"
  ],
  "main": "build/index.js",
  "types": "build/index.d.js",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable && yarn run build:all",
    "postpack": "pinst --enable",
    "clean": "rm -rf ./build",
    "clean:all": "yarn workspaces foreach --topological-dev --parallel --verbose run clean",
    "build": "[ -z \"${SKIP_BUILD:-}\" ] && yarn clean && tsc",
    "build:all": "yarn workspaces foreach --topological-dev --parallel --verbose run build",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:all": "yarn workspaces foreach --topological-dev --parallel --verbose run test",
    "test:core": "cd packages/arch3-core && yarn vitest",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "lint:fix": "yarn run lint --fix",
    "lint:sarif": "yarn run lint --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "docs": "typedoc --options typedoc.cjs .",
    "docs:all": "yarn workspaces foreach --topological-dev --parallel --verbose run docs",
    "publish:all": "yarn workspaces foreach --topological --no-private --verbose npm publish",
    "proto:imports": "cd ./packages/arch3-proto/src && ts-node getProtoImports.ts"
  },
  "lint-staged": {
    "*.ts": [
      "yarn run lint:fix --cache --cache-strategy content"
    ]
  },
  "dependencies": {
    "@archwayhq/arch3-core": "workspace:packages/arch3-core",
    "@archwayhq/arch3-proto": "workspace:packages/arch3-proto"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0",
    "@types/jest": "^28.1",
    "@types/node": "^18.0",
    "@typescript-eslint/eslint-plugin": "^5.30",
    "@typescript-eslint/parser": "^5.28",
    "@yarnpkg/sdks": "^2.6.3",
    "eslint": "^8.19",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-jest": "^26.5",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-simple-import-sort": "^7.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.0",
    "jest": "^28.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "ts-jest": "^28.0",
    "ts-node": "^10.8",
    "typedoc": "^0.23.14",
    "typescript": "^4.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.2.1"
}
