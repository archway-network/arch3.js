{
  "name": "arch3-root",
  "description": "The all-in-one library for your awesome Archway dApp",
  "homepage": "https://docs.archway.io",
  "repository": "github:archway-network/arch3.js",
  "keywords": [
    "archway",
    "cosmos",
    "cosmjs",
    "cosmosjs",
    "cosmwasm",
    "tendermint",
    "atom",
    "wasm",
    "smart-contracts",
    "blockchain",
    "dapp",
    "dapps",
    "nft",
    "tooling",
    "web3"
  ],
  "author": "Archway Network (https://archway.io)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/archway-network/arch3.js/issues"
  },
  "private": true,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "build/",
    "*.md",
    "!*.spec.*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "clean": "yarn workspaces foreach --topological-dev --parallel --verbose run clean",
    "build": "yarn workspaces foreach --topological-dev --parallel --verbose run build",
    "test": "yarn workspaces foreach --topological-dev --parallel --verbose run test",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "lint:fix": "yarn lint --fix",
    "lint:sarif": "yarn lint --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "publish": "yarn workspaces foreach --no-private npm publish"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0",
    "@types/jest": "^28.1",
    "@types/node": "^18.0",
    "@typescript-eslint/eslint-plugin": "^5.30",
    "@typescript-eslint/parser": "^5.28",
    "eslint": "^8.19",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-jest": "^26.5",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-simple-import-sort": "^7.0",
    "husky": "^8.0.0",
    "jest": "^28.1",
    "pinst": "^3.0.0",
    "ts-jest": "^28.0",
    "ts-node": "^10.8",
    "typescript": "^4.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.2.1"
}
