{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "noImplicitReturns": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/__mocks__",
  ]
}
