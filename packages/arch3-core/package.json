{
  "name": "@archwayhq/arch3-core",
  "version": "0.1.0",
  "description": "Core library to interact with Archway Network",
  "homepage": "https://docs.archway.io",
  "repository": "github:archway-network/arch3.js",
  "keywords": [
    "archway",
    "cosmos",
    "cosmjs",
    "cosmosjs",
    "cosmwasm",
    "tendermint",
    "atom",
    "wasm",
    "smart-contracts",
    "blockchain",
    "dapp",
    "dapps",
    "nft",
    "tooling",
    "web3"
  ],
  "author": "Archway Network (https://archway.io)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/archway-network/arch3.js/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "build/",
    "./*.md",
    "./LICENSE"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "yarn clean && tsc --project ./tsconfig.json",
    "test": "jest --no-cache",
    "test:watch": "yarn test --watch",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "lint:fix": "yarn lint --fix",
    "lint:sarif": "yarn lint --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "docs": "typedoc --options typedoc.cjs ."
  },
  "dependencies": {
    "@archwayhq/arch3-proto": "workspace:^",
    "@cosmjs/cosmwasm-stargate": "^0.30.1",
    "@cosmjs/proto-signing": "^0.30.1",
    "@cosmjs/stargate": "^0.30.1",
    "@cosmjs/tendermint-rpc": "^0.30.1"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.4",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
